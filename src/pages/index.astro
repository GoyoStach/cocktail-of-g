---
import { getCollection } from 'astro:content';
import CocktailCard from '../components/CocktailCard.astro';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import ThemeScript from '../components/ThemeScript.astro';

const cocktails = await getCollection('cocktails');
---

<html lang='en'>
	<head>
		<BaseHead
			title='Cocktail of G - Discover Amazing Cocktail Recipes'
			description='Explore our curated collection of classic and modern cocktail recipes. Find your next favorite drink with detailed ingredients and instructions.'
		/>
		<ThemeScript />
	</head>

	<body class='min-h-screen bg-gradient-to-br from-slate-50 to-orange-50'>
		<Header currentPath='/' />

		<!-- Hero Section -->
		<section class='relative overflow-hidden'>
			<div class='absolute inset-0 bg-gradient-to-r from-orange-600/20 to-amber-600/20'>
			</div>
			<div class='relative mx-auto max-w-7xl px-4 py-24 sm:px-6 lg:px-8'>
				<div class='text-center'>
					<h1
						class='text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl lg:text-6xl'
					>
						<span class='block'>Discover Amazing</span>
						<span class='block text-orange-600'>Cocktail Recipes</span>
					</h1>
					<p class='mx-auto mt-6 max-w-2xl text-xl text-slate-600'>
						Explore our curated collection of classic and modern cocktail recipes.
						Each recipe comes with detailed ingredients, measurements, and
						step-by-step instructions to help you craft the perfect drink.
					</p>
					<div class='mt-10 flex items-center justify-center gap-6'>
						<div class='flex items-center gap-2 text-slate-700'>
							<svg
								class='h-5 w-5 text-orange-500'
								fill='currentColor'
								viewBox='0 0 20 20'
							>
								<path
									d='M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z'
								></path>
							</svg>
							<span class='font-medium'
								>{cocktails.length} Premium Recipes</span
							>
						</div>
						<div class='flex items-center gap-2 text-slate-700'>
							<svg
								class='h-5 w-5 text-orange-500'
								fill='currentColor'
								viewBox='0 0 20 20'
							>
								<path
									fill-rule='evenodd'
									d='M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z'
									clip-rule='evenodd'></path>
							</svg>
							<span class='font-medium'>Quick & Easy</span>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Cocktails Grid -->
		<section class='mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8'>
			<div class='mb-12'>
				<h2 class='mb-4 text-3xl font-bold text-slate-900'>Featured Cocktails</h2>
				<p class='max-w-2xl text-lg text-slate-600'>
					From timeless classics to innovative creations, discover cocktails that
					will elevate your mixology skills.
				</p>
			</div>

			<div class='grid gap-8 sm:grid-cols-2 lg:grid-cols-3'>
				{cocktails.map((cocktail) => <CocktailCard cocktail={cocktail} />)}
			</div>
		</section>

		<!-- Call to Action -->
		<section class='bg-orange-600'>
			<div class='mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8'>
				<div class='text-center'>
					<h2 class='mb-4 text-3xl font-bold text-white'>Ready to Start Mixing?</h2>
					<p class='mx-auto mb-8 max-w-2xl text-xl text-orange-100'>
						Each recipe includes everything you need to know - from ingredients to
						techniques. Perfect for beginners and seasoned bartenders alike.
					</p>
					<div
						class='flex flex-wrap items-center justify-center gap-4 text-sm text-orange-100'
					>
						<div class='flex items-center gap-2'>
							<svg class='h-4 w-4' fill='currentColor' viewBox='0 0 20 20'>
								<path
									fill-rule='evenodd'
									d='M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z'
									clip-rule='evenodd'></path>
							</svg>
							<span>Detailed Instructions</span>
						</div>
						<div class='flex items-center gap-2'>
							<svg class='h-4 w-4' fill='currentColor' viewBox='0 0 20 20'>
								<path
									fill-rule='evenodd'
									d='M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z'
									clip-rule='evenodd'></path>
							</svg>
							<span>Precise Measurements</span>
						</div>
						<div class='flex items-center gap-2'>
							<svg class='h-4 w-4' fill='currentColor' viewBox='0 0 20 20'>
								<path
									fill-rule='evenodd'
									d='M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z'
									clip-rule='evenodd'></path>
							</svg>
							<span>Beautiful Presentation</span>
						</div>
					</div>
				</div>
			</div>
		</section>
	</body>
</html>
